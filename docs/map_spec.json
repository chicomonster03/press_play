{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 500,
  "projection": { "type": "equalEarth" },
  "config": {
    "view": { "stroke": null }
  },
  "layer": [

    {
      "data": {
        "url": "world_countries_110m_topo.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },

    {
      "data": {
        "url": "world_countries_110m_topo.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "lookup": "properties.ADMIN",
          "from": {
            "data": {
              "url": "company_counts_by_country.csv"
            },
            "key": "Country",
            "fields": ["CompanyCount"]
          }
        }
      ],
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "CompanyCount",
          "type": "quantitative",
          "scale": { "scheme": "blues" },
          "legend": { "title": "Company Count" }
        },
        "tooltip": [
          {
            "field": "properties.ADMIN",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "CompanyCount",
            "type": "quantitative",
            "title": "# of Companies"
          }
        ]
      }
    },

    {
      "data": { "graticule": { "step": [30, 30] } },
      "mark": {
        "type": "geoshape",
        "stroke": "#ccc",
        "strokeWidth": 0.5
      }
    }
  ]
}