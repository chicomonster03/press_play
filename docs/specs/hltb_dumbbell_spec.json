{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "How much Bang for your Buck?",
    "font": "Press Start 2P",
    "fontSize": 14,
    "color": "#ffd057"
  },
  "data": {"url": "cleaned/hltb_dumbbell_with_genre.csv"},
  "width": 700,
  "height": 400,
  "params": [
    {
      "name": "GenreSelect",
      "bind": {
        "input": "select",
        "options": [null, "RPG", "Horror", "Adventure", "Shooter", "Action", "Platform", "Puzzle"],
        "labels": ["All Genres", "RPG", "Horror", "Adventure", "Shooter", "Action", "Platform", "Puzzle"],
        "name": "Filter by Genre: "
      }
    }
  ],
  "transform": [
    {"filter": "GenreSelect == null || datum.Primary_Genre == GenreSelect"},
    {"filter": "datum.Avg_Main_Story != null"},
    {"filter": "datum.Review_Score != null"}
  ],
  "mark": {
    "type": "circle",
    "size": 150,
    "opacity": 0.7
  },
  "encoding": {
    "x": {
      "field": "Avg_Main_Story",
      "type": "quantitative",
      "title": "Main Story (Hours)",
      "axis": {
        "titleFont": "Press Start 2P",
        "titleColor": "#ffd057",
        "labelFont": "VT323",
        "labelColor": "#e6e6e6",
        "titleFontSize": 11
      }
    },
    "y": {
      "field": "Review_Score",
      "type": "quantitative",
      "title": "Review Score",
      "axis": {
        "titleFont": "Press Start 2P",
        "titleColor": "#ffd057",
        "labelFont": "VT323",
        "labelColor": "#e6e6e6",
        "titleFontSize": 11
      }
    },
    "color": {
      "field": "Primary_Genre",
      "type": "nominal",
      "title": "Genre",
      "scale": {"scheme": "tableau20"},
      "legend": {
        "titleFont": "Press Start 2P",
        "titleColor": "#ffd057",
        "labelFont": "VT323",
        "labelColor": "#e6e6e6",
        "titleFontSize": 10
      }
    },
    "tooltip": [
      {"field": "Name", "type": "nominal", "title": "Game"},
      {"field": "Primary_Genre", "type": "nominal", "title": "Genre"},
      {"field": "Review_Score", "type": "quantitative", "title": "Score"},
      {"field": "Avg_Main_Story", "type": "quantitative", "title": "Main Story (hrs)", "format": ".1f"}
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "background": "transparent"
  }
}