{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Game Time Depth: Main Story vs Completionist",
    "data": {
        "url": "cleaned/hltb_dumbbell_data.csv"
    },
    "config": {
        "background": "#1d1d1d",
        "view": { "stroke": null },
        "title": {
        "color": "white",
        "font": "Press Start 2P",
        "fontSize": 16
        },
        "axis": {
        "labelColor": "white",
        "titleColor": "white",
        "labelFontSize": 10
        },
        "legend": {
        "labelColor": "white",
        "titleColor": "white"
        }
    },
    "title": "How Deep Are Your Games? Main vs Completionist Playtime",
    "width": 700,
    "height": 500,
    "encoding": {
        "y": {
        "field": "Game",
        "type": "nominal",
        "sort": {
            "field": "MainStoryMins",
            "order": "descending"
        },
        "axis": {
            "title": null,
            "labelLimit": 300
        }
        }
    },
    "layer": [
        {
        "mark": {
            "type": "rule",
            "strokeWidth": 2,
            "color": "#b58900"
        },
        "encoding": {
            "x": {
            "field": "MainStoryMins",
            "type": "quantitative",
            "title": "Playtime (minutes)"
            },
            "x2": { "field": "CompletionistMins" }
        }
        },
        {
        "mark": {
            "type": "point",
            "shape": "circle",
            "filled": true,
            "size": 100,
            "color": "#2aa198"
        },
        "encoding": {
            "x": { "field": "MainStoryMins", "type": "quantitative" },
            "tooltip": [
            { "field": "Game", "type": "nominal" },
            { "field": "MainStoryMins", "type": "quantitative", "title": "Main Story (min)" },
            { "field": "CompletionistMins", "type": "quantitative", "title": "Completionist (min)" }
            ]
        }
        },
        {
        "mark": {
            "type": "point",
            "shape": "triangle",
            "filled": true,
            "size": 100,
            "color": "#dc322f"
        },
        "encoding": {
            "x": { "field": "CompletionistMins", "type": "quantitative" }
        }
        }
    ]
}