{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 480,
    "projection": {"type": "equalEarth"},
    "layer": [
        {
        "data": {
            "url": "specs/world_countries_110m_topo.json",
            "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
            }
        },
        "mark": {
            "type": "geoshape",
            "fill": "#2c2e34",
            "stroke": "#1c1d20",
            "strokeWidth": 1
        }
        },
        {
        "data": {
            "url": "specs/world_countries_110m_topo.json",
            "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
            }
        },
        "transform": [
            {
            "lookup": "properties.ADM0_A3",
            "from": {
                "data": {"url": "cleaned/speedrun_country_agg.csv"},
                "key": "ISO3",
                "fields": ["Country", "Total_Runs", "Avg_Record_Time", "Num_Games"]
            }
            },
            {"filter": "datum.Total_Runs != null"}
        ],
        "params": [
            {
            "name": "hover",
            "select": {"type": "point", "on": "mouseover", "clear": "mouseout"}
            }
        ],
        "mark": {
            "type": "geoshape"
        },
        "encoding": {
            "color": {
            "field": "Total_Runs",
            "type": "quantitative",
            "scale": {
                "scheme": "reds",
                "domain": [0, 450000],
                "nice": false
            },
            "title": "Total Speedruns"
            },
            "stroke": {
            "condition": {"param": "hover", "empty": false, "value": "#ff5757"},
            "value": "#1c1d20"
            },
            "strokeWidth": {
            "condition": {"param": "hover", "empty": false, "value": 2.5},
            "value": 0.5
            },
            "tooltip": [
            {"field": "Country", "type": "nominal", "title": "Country"},
            {"field": "Total_Runs", "type": "quantitative", "title": "Total Runs", "format": ","},
            {"field": "Avg_Record_Time", "type": "quantitative", "title": "Avg Record Time (s)", "format": ".1f"},
            {"field": "Num_Games", "type": "quantitative", "title": "Games Represented"}
            ]
        }
        },
        {
        "data": {
            "values": [
            {
                "lon": 40, 
                "lat": -60, 
                "note": "âš  Antarctica data likely inaccurate\n(speedrunners listing incorrect nationality as joke)"
            }
            ]
        },
        "mark": {
            "type": "text",
            "font": "VT323",
            "fontSize": 14,
            "color": "#ffd057",
            "align": "center",
            "baseline": "middle",
            "dx": 0,
            "dy": 0
        },
        "encoding": {
            "longitude": {"field": "lon", "type": "quantitative"},
            "latitude": {"field": "lat", "type": "quantitative"},
            "text": {"field": "note", "type": "nominal"}
        }
        },
        {
        "data": {
            "values": [
            {"lon": 0, "lat": -70}
            ]
        },
        "mark": {
            "type": "point",
            "shape": "triangle-down",
            "size": 150,
            "color": "#ffd057",
            "filled": true
        },
        "encoding": {
            "longitude": {"field": "lon", "type": "quantitative"},
            "latitude": {"field": "lat", "type": "quantitative"}
        }
        }
    ],
    "config": {
        "view": {"stroke": "transparent"},
        "legend": {
        "labelFont": "VT323",
        "titleFont": "VT323",
        "labelColor": "#e6e6e6",
        "titleColor": "#ffd057"
        }
    }
}